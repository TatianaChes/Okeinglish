<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    android:padding="16dp">

    <!--android:shadowColor="@color/grey_button"-->
    <TextView
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:shadowDx="15"
        android:shadowDy="15"
        android:shadowRadius="1"
        android:text="Okeinglish"
        android:textColor="@color/fon"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/layout_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="English for technical specialties"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="21sp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/log_in_link"
        android:layout_marginBottom="50dp"
        android:background="@drawable/gradient"
        android:fontFamily="sans-serif"
        android:text="GET STARTED"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="20dp"
        app:strokeColor="@color/white_text"
        app:strokeWidth="2dp" />


    <TextView
        android:id="@+id/log_in_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="I DON'T HAVE AN ACCOUNT"
        android:textColor="@color/empty_view"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>