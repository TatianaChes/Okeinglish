<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textSize="28sp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:textColor="@color/empty_view"/>

    </LinearLayout>

    <EditText
        android:id="@+id/regName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/sign_in_edit_text"
        android:hint="User name"
        android:inputType="textPersonName"
        android:textColorHint="@color/empty_view"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/regGroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/regName"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/sign_in_edit_text"
        android:hint="Group"
        android:inputType="textPersonName"
        android:textColorHint="@color/empty_view"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/regEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/regGroup"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/sign_in_edit_text"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/empty_view"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/regPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/regEmail"
        android:background="@drawable/sign_in_edit_text"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/empty_view"
        android:textSize="22sp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/registration_in_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/regPassword"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient"
        android:fontFamily="sans-serif"
        android:text="Registration"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="20dp"
        app:strokeColor="@color/white_text"
        app:strokeWidth="2dp" />

</RelativeLayout>